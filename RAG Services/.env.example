# RAG Services Environment Configuration
# All models are FREE - no paid APIs required

# Gemini API (Optional - FREE tier: 15 req/min, 1500/day)
# Get key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_free_gemini_api_key_here

# App Configuration
DEBUG=True
HOST=0.0.0.0
PORT=5003

# Embedding Model (FREE - downloads automatically)
# Options:
# - keepitreal/vietnamese-sbert (Vietnamese-optimized, recommended)
# - paraphrase-multilingual-MiniLM-L12-v2 (small, fast)
# - dangvantuan/vietnamese-embedding (Vietnamese-specific)
EMBEDDING_MODEL=keepitreal/vietnamese-sbert

# Retrieval Settings
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# Chunking Settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# LLM Provider (for Phase 3 - RAG responses)
# Options: gemini (free), ollama (local, free), qwen (local, free)
LLM_PROVIDER=gemini

# ====================
# Phase 6: Performance & Reliability
# ====================

# Caching Configuration
USE_REDIS=False  # Set to True to use Redis (requires Redis server)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_DEFAULT_TTL=3600  # 1 hour in seconds
CACHE_MAX_MEMORY_ITEMS=1000

# Rate Limiting
ENABLE_RATE_LIMIT=True
DEFAULT_RATE_LIMIT=60 per minute
SEARCH_RATE_LIMIT=30 per minute
UPLOAD_RATE_LIMIT=10 per minute

# Retry & Circuit Breaker
MAX_RETRIES=3
RETRY_INITIAL_WAIT=1.0  # seconds
RETRY_MAX_WAIT=10.0  # seconds
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60  # seconds

# Monitoring
ENABLE_METRICS=True
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/rag_services.log

# Performance Tuning
NUM_THREADS=4  # CPU threads for embedding
BATCH_SIZE=32  # Batch size for processing
ENABLE_EMBEDDING_CACHE=True
