# Document Intelligence Service Configuration

# Server Settings
FLASK_APP=app.py
FLASK_ENV=development
HOST=0.0.0.0
PORT=5003

# OCR Settings
OCR_LANGUAGE=vi  # Vietnamese
OCR_USE_GPU=False  # Set True if you have CUDA
OCR_DET_MODEL=ch_PP-OCRv4_det
OCR_REC_MODEL=ch_PP-OCRv4_rec

# File Upload Settings
MAX_FILE_SIZE=20971520  # 20MB in bytes
UPLOAD_FOLDER=static/uploads
OUTPUT_FOLDER=output
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf,bmp,tiff,webp

# Processing Settings
ENABLE_ANGLE_CLS=True  # Auto rotate detection
ENABLE_TABLE_RECOGNITION=False  # Phase 2 feature

