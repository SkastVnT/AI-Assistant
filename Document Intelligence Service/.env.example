# Document Intelligence Service Configuration

# Server Settings
FLASK_APP=app.py
FLASK_ENV=development
HOST=0.0.0.0
PORT=5003

# OCR Settings
OCR_LANGUAGE=vi  # Vietnamese
OCR_USE_GPU=False  # Set True if you have CUDA
OCR_DET_MODEL=ch_PP-OCRv4_det
OCR_REC_MODEL=ch_PP-OCRv4_rec

# File Upload Settings
MAX_FILE_SIZE=20971520  # 20MB in bytes
UPLOAD_FOLDER=static/uploads
OUTPUT_FOLDER=output
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf,bmp,tiff,webp

# Processing Settings
ENABLE_ANGLE_CLS=True  # Auto rotate detection
ENABLE_TABLE_RECOGNITION=False  # Phase 2 feature

# AI Enhancement - Gemini 2.0 Flash (FREE)
GEMINI_API_KEY=your_gemini_api_key_here
ENABLE_AI_ENHANCEMENT=True
AI_MODEL=gemini-2.0-flash-exp  # FREE model
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=8192

# AI Features
ENABLE_CLASSIFICATION=True  # Auto document type classification
ENABLE_EXTRACTION=True      # Key information extraction
ENABLE_SUMMARY=True         # Document summarization
ENABLE_QA=True             # Question answering
ENABLE_TRANSLATION=True    # Multi-language translation
