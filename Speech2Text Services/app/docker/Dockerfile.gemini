# =============================================================================
# Gemini Proxy Service - Cloud AI Integration
# =============================================================================
FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install only necessary packages for Gemini
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    google-generativeai \
    redis \
    python-dotenv \
    requests

# Copy Gemini service code
COPY api/gemini_service.py .

# Expose port
EXPOSE 8004

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8004/health || exit 1

# Run Gemini proxy service
CMD ["uvicorn", "gemini_service:app", "--host", "0.0.0.0", "--port", "8004"]